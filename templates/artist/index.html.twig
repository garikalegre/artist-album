{% extends 'base.html.twig' %}

{% block title %}Artists{% endblock %}

{% block body %}
<section class="contaiter">
    <h1 class="lead">Artists list</h1>
    <a class="btn btn-info my-5" href="{{ path('artist.create') }}">Create new</a>
    <table class="table">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.firstName }}</td>
                <td>{{ artist.lastName }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</section>
{% endblock %}
