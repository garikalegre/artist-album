{% extends 'base.html.twig' %}

{% block title %}Albums{% endblock %}

{% block body %}
<section class="contaiter">
    <h1 class="lead">Albums list</h1>
    <a class="btn btn-info my-5" href="{{ path('album.create') }}">Create new</a>
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Artist</th>
        </tr>
        </thead>
        <tbody>
        {% for album in albums %}
            <tr>
                <td>{{ album.name }}</td>
                <td>{{ album.description }}</td>
                <td>{{ album.artist.firstName }} {{ album.artist.lastName }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</section>
{% endblock %}
